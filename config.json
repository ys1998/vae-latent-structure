{
    "name": "RecurrentGraphVAE",
    "n_gpu": 1,
    "arch": {
        "type": "RecurrentGraphVAE",
        "args": {
            "input_dim": 3,
            "n_nodes": 5
        }
    },
    "data_loader": {
        "type": "HandwritingDataLoader",
        "args": {
            "data_dir": "data/handwriting",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "loss_handwriting",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.8
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 1000,
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}