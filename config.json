{
    "name": "GraphVAE",
    "n_gpu": 1,
    
    "arch": {
        "type": "GraphVAE",
        "args": {
            "input_dim": 784,
            "n_nodes": 10,
            "node_dim": 1
        }
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "nesterov": true,
            "momentum" : 0.9
        }
    },
    "loss": "loss_MNIST",
    "metrics": [
        "map_compare"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 200,
            "gamma": 0.25
        }
    },
    "trainer": {
        "epochs": 3000,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "off",
        "early_stop": 10,
        
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
